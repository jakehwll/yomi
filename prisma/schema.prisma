datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Series {
  id         String    @id @unique @default(cuid())
  title      String
  folder     String
  thumbnail  String?
  updated_at DateTime? @updatedAt
  created_at DateTime? @default(now())
  books      Book[]
}

model Book {
  id         String    @id @unique @default(cuid())
  title      String
  folder     String
  thumbnail  String?
  updated_at DateTime? @updatedAt
  created_at DateTime? @default(now())
  seriesId   String?
  Series     Series?   @relation(fields: [seriesId], references: [id])
}